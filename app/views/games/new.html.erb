<h1>New Game</h1>
<p>Here are your letters:</p>
<p><%= @letters.join(' ') %></p>

<%= form_tag(score_path, method: "post", data: { turbo: false }) do %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= text_field_tag :word %>
  <%= hidden_field_tag :letters, @letters.join(' ') %>
  <%= submit_tag "Submit" %>
<% end %>
